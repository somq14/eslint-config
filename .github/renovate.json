{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-lib",
    ":timezone(Asia/Tokyo)",
    "schedule:weekends",
    ":prHourlyLimitNone",
    ":maintainLockFilesWeekly"
  ],
  "commitMessagePrefix": "⬆️ ",
  "packageRules": [
    {
      "groupName": "patch versions",
      "matchUpdateTypes": ["patch"]
    }
  ]
}
